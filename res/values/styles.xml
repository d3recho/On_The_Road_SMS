<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="main_color">#C0C0C0</color>

    <style name="seekbar" parent="@android:style/Widget.SeekBar">
        <item name="android:thumb">@drawable/volknob</item>
        <item name="android:thumbOffset">30px</item>
        <item name="android:progressDrawable">@drawable/progress</item>        
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
		<item name="android:background">@drawable/button_enabled</item>		
		<item name="android:paddingLeft">30dp</item>
		<item name="android:paddingRight">30dp</item>
		<item name="android:paddingTop">1dp</item>
		<item name="android:paddingBottom">1dp</item>
	</style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
		<item name="android:background">@drawable/button_states</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:shadowColor">#777777</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
	</style>
	
    <style name="playbackButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/button_states</item>
    </style>
	
</resources>